
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <title>MyBlog</title>
</head>
<body>
   <% edit_blog.forEach(edits=>{%>
    <form action="/routes/save/<%= edits.id %>?_method=patch" method="post">
      <h1><%= edits.title %></h1>

      <div class="form-group mb-4">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" value="<%= edits.title %>">
        </div>
        <div class="form-group mb-4">
          <label for="description">Description</label>
          <textarea type="text" class="form-control" name="description"  value="<%= edits.description %>"></textarea>
        </div>
        <div class="form-group mb-4">
          <label for="markdown">markdown</label>
          <textarea type="text"name="markdown" class="form-control"  value="<%= edits.markdown %>"></textarea>
        </div>

        <div class="buttons">
          <a href="/routes" class="btn btn-secondary">cancel</a>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
  </form>

   <%}) %>

</body>



<style>
    form{
        margin: 40px;
    }
    input[type=text], textarea[type=text]{
        border: 2px solid black;
    }
    body{
      background: linear-gradient(112.1deg, rgb(32, 38, 57) 11.4%, rgb(63, 76, 119) 70.2%);
      color: white;
      background-repeat: no-repeat;
      background-attachment: fixed;
  }
</style>

